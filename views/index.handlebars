<h1>
  <img src="/assets/img/burger.jpeg" alt="Burger Image">
</h1>

<h2>Eat-Da-Burger!</h2>

<div class="row">
  <div class="container">
    <div class="col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Burgers To Eat</h3>
        </div>
        <div class="panel-body">
          <ol>
            {{#each burgers}} {{#unless devoured}}
            <li class="burger-item">
              {{burger_name}}
              <button class="btn btn-primary eat-burger" data-id="{{id}}" data-devour="true">Devour Burger!</button>
            </li>
            {{/unless}} {{/each}}
          </ol>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Burger Order</h3>
        </div>
        <div class="panel-body">
          <form class="create-form">
            <textarea class="form-control" rows="3"></textarea>
            <button class="btn btn-primary add-burger">Submit</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Burgers Eaten</h3>
        </div>
        <div class="panel-body">
          <ul>
            {{#each burgers}} {{#if devoured}}
            <li class="eaten-burger-item">
              {{burger_name}}
            </li>
            {{/if}} {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(".eat-burger").on("click", function (event) {
    var id = $(this).data("id");
    var devouredBurger = $(this).data('devour');

    var burgerDevour = {
      devoured: devouredBurger
    };

    console.log(burgerDevour);

    $.ajax("/api/burgers/" + id, {
      type: "PUT",
      data: burgerDevour
    }).then(
      function () {
        console.log("changed devour to", devouredBurger);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

  $('.create-form').on('submit', function (event) {
    event.preventDefault();

    var newBurger = {
      burger_name: $('.form-control').val().trim(),
      devoured: 'false'
    }

    $.post('/api/burgers', {
      data: newBurger
    }).then(function () {
      console.log('created new burger');
      location.reload();
    });
  });
</script>